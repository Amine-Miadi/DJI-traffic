<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <ImageView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="19dp"
        android:background="#00FFFFFF"
        android:src="@drawable/companylogo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="395dp"
        android:layout_marginBottom="22dp"
        android:background="#FFFFFF"
        android:src="@drawable/droneimage" />

    <ImageView
        android:layout_width="311dp"
        android:layout_height="195dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="406dp"
        android:layout_marginBottom="211dp"
        android:background="#FFFFFF"
        android:id="@+id/companylogo"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="218dp"
        android:background="#00FFFFFF"
        android:text="Traffic Monitoring"
        android:textColor="#131C4C"
        android:textSize="40sp" />

    <Button
        android:id="@+id/enterbutton"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="316dp"
        android:background="@drawable/enterbutton"
        android:enabled="false"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Entrer"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

</RelativeLayout>
